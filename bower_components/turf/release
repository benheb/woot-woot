echo "browserifying.."
./node_modules/.bin/browserify index.js > turf.js -s t

echo "uglifying.."
./node_modules/.bin/uglifyjs turf.js -o turf.min.js

echo "versioning.."
npm version patch

echo "adding.."
git add .

echo "commiting.."
git commit -a -m "release"

echo "releasing.."
git push

echo "publishing.."
npm publish

echo "..complete"